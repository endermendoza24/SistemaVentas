<MudPaper Width="250px" Class="d-inline-flex py-3" Elevation="0">


    <MudNavMenu Rounded="true" Margin="Margin.Dense" Color="Color.Primary" Class="mud-width-full">
        <MudText Typo="Typo.h6" Class="px-4">Sistema Caprichos</MudText>
        <MudDivider Class="my-2" />

        <MudNavLink Href="/" Icon="@Icons.Filled.Dashboard">Inicio</MudNavLink>

        <AuthorizeView Roles="admin">
            <Authorized>
                <MudNavGroup Title="Compras" Icon="@Icons.Filled.ShoppingBag" Expanded="true">
                    <MudNavLink Href="/lista-compras">Compras</MudNavLink>
                    <MudNavLink Href="/lista-proveedores">Proveedores</MudNavLink>
                </MudNavGroup>                
            </Authorized>
        </AuthorizeView>




       <AuthorizeView Roles="admin">
            <Authorized>
                <MudNavGroup Title="Catálogos" Icon="@Icons.Filled.AccountTree" Expanded="true">
                    <MudNavLink Href="/lista-marcas">Marcas</MudNavLink>
                    <MudNavLink Href="/indexcategoria">Categorías</MudNavLink>
                    <MudNavLink Href="/lista-tallas">Tallas</MudNavLink>
                </MudNavGroup>
            </Authorized>
       </AuthorizeView>

        <MudNavLink Href="/lista-articulos" Icon="@Icons.Filled.AddShoppingCart">Artículos</MudNavLink>
       

        <MudNavGroup Title="Ventas" Icon="@Icons.Filled.ShoppingBag" Expanded="true">
            <MudNavLink Href="/lista-ventas">Ventas</MudNavLink>
            <MudNavLink Color="Color.Primary" Href="/lista-clientes">Clientes</MudNavLink>
        </MudNavGroup>

        <AuthorizeView Roles="admin">
            <Authorized>
                <MudNavLink Href="/lista-caja" Icon="@Icons.Filled.AccountBalance">Caja</MudNavLink>
                @*<MudNavLink Href="/lista-ajustes" Icon="@Icons.Filled.Settings">Ajustes</MudNavLink>*@
            </Authorized>
        </AuthorizeView>

        <AuthorizeView Roles="admin">
            <Authorized>
                <MudNavGroup Title="Ajustes" Icon="@Icons.Filled.Settings" Expanded="true">
                    <MudNavLink Href="/lista-usuarios">Usuarios</MudNavLink>
                    <MudNavLink Href="/roles">Roles</MudNavLink>
                    <MudNavLink Href="/lista-ajustes">Ajustes </MudNavLink>
                </MudNavGroup>
            </Authorized>
        </AuthorizeView>

    </MudNavMenu>
</MudPaper>


@code {
    [Parameter]
    public bool SideBarOpen { get; set; }   
}